<% content_for :switcher do %>
  <%= render '/layouts/prison_switcher' %>
<% end %>
<% if @feedback.errors.count > 0 %>
  <%= render :partial => "/shared/validation_errors", :locals => { :errors => @feedback.errors } %>
<% end %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= form_tag(prison_feedback_index_path(@feedback), method: :post, id: "feedback_form")  do %>
      <h1 class="govuk-heading-xl govuk-!-margin-top-4">
        Feedback
      </h1>
      <div class='govuk-!-margin-top-4'>
        <div class="govuk-form-group <% if @feedback.errors.present? %>govuk-form-group--error<% end %>">
          <fieldset class="govuk-fieldset" aria-describedby="feedback-conditional-hint">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--s govuk-!-margin-bottom-4">
              <h1 class="govuk-fieldset__heading">Please fill in the following fields</h1>
            </legend>
            <div class="govuk-form-group <% if @feedback.errors[:name].present? %>govuk-form-group--error<% end %>">
              <div class="govuk-character-count" data-module="character-count" data-maxlength="175">
                <div class="govuk-form-group">
                  <label class="govuk-label" for="provide-detail">Name</label>
                  <textarea class="govuk-input" id="suitability-detail" name="feedback[name]" rows="1" aria-describedby="name-hint name-error"></textarea>
                </div>
              </div>
            </div>
            <%= submit_tag "Submit", role: "button", draggable: "false", class: "govuk-button" %>
    <% end %>
  </div>
</div>