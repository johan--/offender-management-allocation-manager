<% if current_user.present? %>
  <div class="govuk-!-padding-bottom-4">
    <%= link_to 'Home', '/' %>
  </div>
<% end %>

<% if notice.present? %>
  <p class="notification govuk-!-margin-bottom-9" job_type="group" aria-labelledby="notice-heading">
    <%= notice %>
  </p>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l govuk-!-margin-bottom-5">Help</h1>
    <h2 class="govuk-heading-m">Getting set up</h2>
    <p class="govuk-body">If you are new to this service, or have staff members you need to add, see the step by step
      <%= link_to 'guide to getting set up', help_path %>
    </p>
  </div>
</div>

<div class="govuk-grid-row dashboard-row">
  <div class="govuk-grid-column-two-thirds">
    <% if @contact.errors.count > 0 %>
      <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
          There is a problem
        </h2>
        <div class="govuk-error-summary__body">
          <ul class="govuk-list govuk-error-summary__list">
            <% if @contact.errors[:name] %>
              <li><a href="#name" data-turbolinks="false"><%= @contact.errors[:name].first %></a></li>
            <% end %>

            <% if @contact.errors[:email_address] %>
              <li><a href="#email_address" data-turbolinks="false"><%= @contact.errors[:email_address].first %></a></li>
            <% end %>

            <% if @contact.errors[:job_type] %>
              <li><a href="#job_type" data-turbolinks="false"><%= @contact.errors[:job_type].first %></a></li>
            <% end %>

            <% if @contact.errors[:prison] %>
              <li><a href="#prison" data-turbolinks="false"><%= @contact.errors[:prison].first %></a></li>
            <% end %>

            <% if @contact.errors[:message] %>
              <li><a href="#message" data-turbolinks="false"><%= @contact.errors[:message].first %></a></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>

  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-form-group ">
      <h2 class="govuk-heading-m">Contact us</h2>
      <p class="govuk-body">Complete this form for technical help</p>

      <%= form_for @contact, url: contact_us_path, method: :post, id: "help_form" do |f| %>
        <div class="<%= field_error(@contact.errors, :name) %>">
          <%= f.label "Full name", "Full name", class: 'govuk-label' %>
          <% if @contact.errors[:name].present? %>
                  <span class="govuk-error-message">
                    <%= @contact.errors[:name].first %>
                  </span>
            <%= f.text_field("name", id: "name", class: "govuk-input govuk-input--error") %>
          <% else %>
            <%= f.text_field("name", id: "name", class: "govuk-input") %>
          <% end %>
        </div>

        <div class="<%= field_error(@contact.errors, :email_address) %>">
          <%= f.label "email_address", "Email address", class: 'govuk-label' %>
          <% if @contact.errors[:email_address].present? %>
                <span class="govuk-error-message">
                  <%= @contact.errors[:email_address].first %>
                </span>
            <%= f.email_field("email_address", id: "email_address", class: "govuk-input govuk-input--error") %>
          <% else %>
            <%= f.email_field("email_address", id: "email_address", class: "govuk-input") %>
          <% end %>
        </div>

        <div class="<%= field_error(@contact.errors, :job_type) %>">
          <%= f.label "Your job role", "Your job role", class: 'govuk-label' %>
          <% if @contact.errors[:job_type].present? %>
                  <span class="govuk-error-message">
                    <%= @contact.errors[:job_type].first %>
                  </span>
            <%= f.text_field("job_type", id: "job_type", class: "govuk-input govuk-input--error") %>
          <% else %>
            <%= f.text_field("job_type", id: "job_type", class: "govuk-input") %>
          <% end %>
        </div>

        <div class="<%= field_error(@contact.errors, :prison) %>">
          <%= f.label "prison", "Prison name", class: 'govuk-label' %>
          <% if @contact.errors[:prison].present? %>
                  <span class="govuk-error-message">
                    <%= @contact.errors[:prison].first %>
                  </span>
            <%= f.text_field("prison", id: "prison", class: "govuk-input govuk-input--error") %>
          <% else %>
            <%= f.text_field("prison", id: "prison", class: "govuk-input") %>
          <% end %>
        </div>

        <div class="<%= field_error(@contact.errors, :message) %>">
          <%= f.label "Describe what you need help with", "Describe what you need help with", class: 'govuk-label' %>
          <% if @contact.errors[:message].present? %>
                  <span class="govuk-error-message">
                    <%= @contact.errors[:message].first %>
                  </span>
            <%= f.text_area("message", rows: 10, id: "message", class: "govuk-textarea govuk-textarea--error") %>
          <% else %>
            <%= f.text_area("message", rows: 10, id: "message", class: "govuk-textarea") %>
          <% end %>
        </div>
        <%= f.submit 'Submit', class: "govuk-button" %>
      <% end %>
      </div>
  </div>
</div>