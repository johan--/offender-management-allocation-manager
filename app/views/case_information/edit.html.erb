<h2 class="govuk-heading-m"><%= @prisoner.full_name %> - <%= @prisoner.offender_no %></h2>

<%= render :partial => "form", :locals => {
      :action => case_information_path(),
      :method => :put,
      :save_text => "Update" } %>
