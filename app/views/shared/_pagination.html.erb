<% if page_data %>
<div class="govuk-grid-row pagination">
  <div class="govuk-grid-column-one-half">
    <div class="govuk-grid-row">
      <ul class="links">
        <li>
          <% if page_data.previous? %>
            <a href="<%= replace_param(param_name, page_data.current_page - 1) %>">&laquo; Previous</a>
          <% else %>
            &laquo; Previous
          <% end %>
        </li>

        <% page_data.pages.each { |page| %>
          <% if page.present? %>
            <li>
              <% if page == page_data.current_page %>
                <%= page %>
              <% else %>
                <a href="<%= replace_param(param_name, page) %>"><%= page %></a>
              <% end %>
            </li>
          <% else %>
            ...
          <% end %>
        <% } %>

        <li>
        <% if page_data.next? %>
          <a href="<%= replace_param(param_name, page_data.current_page + 1) %>">Next &raquo;</a>
        <% else %>
          Next &raquo;
        <% end %>
        </li>
      </ul>
    </div>
  </div>

  <div class="govuk-grid-column-one-half result-count">
    Showing <%= page_data.record_range %> of <%= page_data.total_elements %> results
  </div>
</div>
<% end %>
