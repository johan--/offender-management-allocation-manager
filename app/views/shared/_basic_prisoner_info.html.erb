<div class="govuk-!-margin-top-1">
  <table class="govuk-table">
    <tbody class="govuk-table__body">
    <tr class="govuk-table__row">
      <td class="govuk-table__header" scope="row">Prisoner</td>
      <td class="govuk-table__cell"></td>
    </tr>
    <tr class="govuk-table__row">
      <td class="govuk-table__cell hmpps-table-cell__key">Name</td>
      <td class="govuk-table__cell table_cell__left_align hmpps-table-cell__key"><a
          href="#"><%= @prisoner.surname %>, <%= @prisoner.first_name %></a></td>
    </tr>
    <tr class="govuk-table__row">
      <td class="govuk-table__cell hmpps-table-cell__key">Number</td>
      <td class="govuk-table__cell table_cell__left_align hmpps-table-cell__key"><%= @prisoner.noms_id %></td>
    </tr>
    <tr class="govuk-table__row">
        <td class="govuk-table__cell hmpps-table-cell__key">Nationality</td>
        <td class="govuk-table__cell table_cell__left_align hmpps-table-cell__key"><%= @prisoner.nationality %></td>
      </tr>
    </tbody>
  </table>
